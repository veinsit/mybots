{   
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6" : true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 0,
        "no-console": 0,
        "no-unused-vars": 0
    }    
}
